{
  "name": "html2img",
  "version": "1.0.0",
  "description": "Convert HTML to image using Satori",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-global-webcrypto' jest",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "pnpm run build",
    "example:node": "tsx examples/node/index.ts",
    "prepublishOnly": "pnpm run lint && pnpm test",
    "preversion": "pnpm run lint",
    "version": "pnpm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "html",
    "image",
    "satori",
    "conversion"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <23.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/html2img.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/html2img/issues"
  },
  "homepage": "https://github.com/yourusername/html2img#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rollup": "^4.14.3",
    "rollup-plugin-typescript2": "^0.36.0",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@fontsource/noto-sans-sc": "^5.2.5",
    "@resvg/resvg-js": "^2.6.2",
    "@types/sharp": "^0.31.1",
    "axios": "^1.9.0",
    "jsdom": "^24.0.0",
    "satori": "^0.10.0",
    "sharp": "^0.34.1"
  }
}
